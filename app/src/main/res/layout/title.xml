<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/TitleBack"
    android:padding="10dp">

    <ImageView
        android:id="@+id/title_iv_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:background="@mipmap/main_logo"
        android:visibility="visible" />


    <TextView
        android:id="@+id/title_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="视频中心"
        android:textColor="#fff"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/title_ib_search"
        android:layout_width="220dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/title_iv_icon"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/main_search" />

    <TextView
        android:id="@+id/title_ib_right2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@mipmap/scan"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/title_ib_right1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toLeftOf="@id/title_ib_right2"
        android:layout_margin="5dp"
        android:background="@mipmap/sign"
        android:scaleType="fitXY" />


</RelativeLayout>