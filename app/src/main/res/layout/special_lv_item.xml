<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/special_icon"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@mipmap/duanwang_icon" />

    <TextView
        android:id="@+id/special_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/special_icon"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/special_icon"
        android:lines="1"
        android:text="title"
        android:textColor="#000" />




    <TextView
        android:id="@+id/special_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/special_icon"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/special_icon"
        android:drawableLeft="@mipmap/keshi_smart"
        android:gravity="center"
        android:lines="1"
        android:text="time"
        android:textColor="#41ec34" />

    <TextView
        android:id="@+id/special_jifen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/special_time"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/special_time"
        android:drawableLeft="@mipmap/jifen_smart"
        android:gravity="center"
        android:lines="1"
        android:text="jifen"
        android:textColor="#41ec34" />

    <TextView
        android:id="@+id/special_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/special_jifen"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/special_jifen"
        android:drawableLeft="@mipmap/dianjiliang_smart"
        android:gravity="center"
        android:lines="1"
        android:text="jifen"
        android:textColor="#41ec34" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="12312312"
        android:lines="2"
        android:id="@+id/search_title"
        android:layout_below="@id/special_title"
        android:layout_toRightOf="@id/special_icon"
        android:layout_above="@id/special_time"
        android:layout_alignRight="@id/special_hot"
        android:visibility="gone"
        android:layout_alignEnd="@id/special_hot"/>

</RelativeLayout>